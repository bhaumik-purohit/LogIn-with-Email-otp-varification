
@{
    <h1>Log In</h1>
    <div class="container">
        <div class="row" style="margin-top: 100px">
            <div class="col-4"></div>
            <div class="col-4">
                <form method="post" asp-area="" asp-controller="Login" asp-action="Login">
                    <input type="hidden" id="id" name="id" />

                    <label for="" class="form-label">Username</label>
                    <input type="text" class="form-control" id="user_name" name="user_name" placeholder="Enter Username">

                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="pass_word" name="pass_word" placeholder="Enter Password">

                    <input type="checkbox" class="form-check-input" id="exampleCheck1" style="margin-top: 15px">
                    <label class="form-check-label" for="exampleCheck1" style="margin-top: 10px">Remember me</label>

                    <a class="col-6 text-dark" style="text-decoration: none; padding-left: 150px" href="">Forgot password?</a>

                    <div style="padding-top: 20px">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <p class="mt-3">Don't have an account? <a style="color: rgb(61, 117, 239); text-decoration: none;" asp-action="Registration" target="_parent"><b>Register here</b></a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
